<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<DialogPane prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" styleClass="form-dialog">
    <content>
        <GridPane hgap="10.0" vgap="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Nombre:" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="SKU:" GridPane.rowIndex="1" />
                <TextField fx:id="skuField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Código de Barras:" GridPane.rowIndex="2" />
                <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <children>
                        <TextField fx:id="barcodeField" HBox.hgrow="ALWAYS" />
                        <Button fx:id="scanBarcodeButton" mnemonicParsing="false" onAction="#scanBarcode"
                                text="Escanear" />
                    </children>
                </HBox>

                <Label text="Precio:" GridPane.rowIndex="3" />
                <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Stock:" GridPane.rowIndex="4" />
                <TextField fx:id="stockField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Categoría:" GridPane.rowIndex="5" />
                <ComboBox fx:id="categoryCombo" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <Label text="Activo:" GridPane.rowIndex="6" />
                <CheckBox fx:id="activeCheckbox" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Descripción:" GridPane.rowIndex="7" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets top="5.0" />
                    </GridPane.margin>
                </Label>
                <TextArea fx:id="descriptionArea" prefHeight="80.0" wrapText="true"
                          GridPane.columnIndex="1" GridPane.rowIndex="7" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="CANCEL" />
        <ButtonType fx:constant="OK" />
    </buttonTypes>
    <header>
        <Label fx:id="dialogTitleLabel" text="Nuevo Producto">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
    </header>
</DialogPane>