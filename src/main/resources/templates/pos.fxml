<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pos.controller.POSController"
            styleClass="main-container">

    <!-- Barra superior -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="header">
            <children>
                <Label text="Sistema POS" styleClass="app-title">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="dateTimeLabel" text="--/--/---- --:--" />
                <Label fx:id="userLabel" text="Usuario: --" />
                <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout"
                        styleClass="logout-button" text="Cerrar sesión" />
            </children>
            <padding>
                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <!-- Menú lateral -->
    <left>
        <VBox prefWidth="200.0" spacing="5.0" styleClass="sidebar">
            <children>
                <Button fx:id="posButton" maxWidth="Infinity" mnemonicParsing="false"
                        styleClass="menu-button,active-menu-button" text="Venta" />
                <Button fx:id="productsButton" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#openProductsScreen" styleClass="menu-button" text="Productos" />
                <Button fx:id="inventoryButton" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#openInventoryScreen" styleClass="menu-button" text="Inventario" />
                <Button fx:id="salesButton" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#openSalesScreen" styleClass="menu-button" text="Historial" />
                <Button fx:id="reportsButton" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#openReportsScreen" styleClass="menu-button" text="Reportes" />
                <Region VBox.vgrow="ALWAYS" />
                <Button fx:id="settingsButton" maxWidth="Infinity" mnemonicParsing="false"
                        onAction="#openSettingsScreen" styleClass="menu-button" text="Configuración" />
            </children>
            <padding>
                <Insets bottom="15.0" left="10.0" right="10.0" top="15.0" />
            </padding>
        </VBox>
    </left>

    <!-- Contenido principal -->
    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" styleClass="content-area">
            <top>
                <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="section-header">
                    <children>
                        <Label text="Punto de Venta" styleClass="section-title">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="invoiceNumberLabel" text="Factura: --" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="newSaleButton" mnemonicParsing="false" styleClass="new-button"
                                text="Nueva Venta" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                    </padding>
                </HBox>
            </top>

            <center>
                <SplitPane dividerPositions="0.7" orientation="VERTICAL" styleClass="split-pane">
                    <items>
                        <!-- Área de tabla (carrito) -->
                        <VBox spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Código:" />
                                        <TextField fx:id="barcodeField" promptText="Código de barras" HBox.hgrow="ALWAYS" />
                                        <Label text="Cantidad:" />
                                        <TextField fx:id="quantityField" prefWidth="80.0" text="1" />
                                        <Button fx:id="addButton" mnemonicParsing="false" styleClass="action-button"
                                                text="Agregar" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <TextField fx:id="searchField" promptText="Buscar producto..." />
                                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#searchProducts"
                                                styleClass="search-button" text="Buscar" />
                                    </children>
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                    </padding>
                                </HBox>

                                <TableView fx:id="cartTable" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="productColumn" prefWidth="300.0" text="Producto" />
                                        <TableColumn fx:id="quantityColumn" prefWidth="100.0" text="Cantidad" />
                                        <TableColumn fx:id="unitPriceColumn" prefWidth="150.0" text="Precio Unit." />
                                        <TableColumn fx:id="totalColumn" prefWidth="150.0" text="Total" />
                                    </columns>
                                    <placeholder>
                                        <Label text="Escanee o agregue productos" />
                                    </placeholder>
                                </TableView>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="removeButton" mnemonicParsing="false"
                                                styleClass="danger-button" text="Eliminar Seleccionado" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </VBox>

                        <!-- Área de totales y pago -->
                        <VBox spacing="15.0" styleClass="payment-panel">
                            <children>
                                <HBox spacing="20.0">
                                    <children>
                                        <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="Cliente:" />
                                                        <TextField fx:id="customerNameField" HBox.hgrow="ALWAYS"
                                                                   promptText="Nombre del cliente" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="RFC:" />
                                                        <TextField fx:id="customerTaxIdField" promptText="RFC del cliente"
                                                                   HBox.hgrow="ALWAYS" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                    <children>
                                                        <Label text="Pago:" />
                                                        <ComboBox fx:id="paymentMethodCombo" prefWidth="150.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>

                                        <VBox alignment="CENTER_RIGHT" spacing="5.0" styleClass="totals-panel">
                                            <children>
                                                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                                                    <children>
                                                        <Label text="Subtotal:" />
                                                        <Label fx:id="subtotalLabel" styleClass="amount-label" text="$0.00" />
                                                    </children>
                                                </HBox>
                                                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                                                    <children>
                                                        <Label text="IVA (16%):" />
                                                        <Label fx:id="taxLabel" styleClass="amount-label" text="$0.00" />
                                                    </children>
                                                </HBox>
                                                <Separator />
                                                <HBox alignment="CENTER_RIGHT" spacing="20.0">
                                                    <children>
                                                        <Label text="TOTAL:" styleClass="total-label" />
                                                        <Label fx:id="totalLabel" styleClass="total-amount" text="$0.00" />
                                                    </children>
                                                </HBox>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
                                            </padding>
                                        </VBox>
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                    <children>
                                        <Button fx:id="cancelButton" mnemonicParsing="false"
                                                styleClass="danger-button" text="Cancelar Venta" />
                                        <Button fx:id="completeButton" defaultButton="true" mnemonicParsing="false"
                                                styleClass="success-button" text="Completar Venta" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>